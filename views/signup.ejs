    <div class="container">
        <h1>Signup</h1>
        <form id="login-form" method="post" action="/signup" style="text-align:center;" class="clearfix">
            <br>
            <% if( taken ) {%>
                <div class="alert-message error" style="margin-left:auto; margin-right:auto; width: 600px;">
                    <a class="close" href="#">Ã—</a>
                    <p><strong>Uh oh!</strong> That username is taken.</p>
                </div>
            <% } %>
            <label for"user[name]"><h3>Username:</h3></label>
            <input type="text" name="user[name]" placeholder="Username"/><br />
            <label for"user[name]"><h3>Email:</h3></label>
            <input type="text" name="user[email]" placeholder="Email"/><br /
            <label for"user[pass]"><h3>Password:</h3> </label>
            <input type="password" name="user[pass]" placeholder="Password"/><br /><br />
            <input type="submit" class="btn btn-large btn-primary" value="Signup" />
            <div id="login-ext">
                <p><br><a href="/signup">Don't have an account?</a></p>
            </div>
        </form> 
