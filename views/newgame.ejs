<html class="no-js">
<head>
    <title>New Game - TRIUMPH</title>
    <link rel="stylesheet" type="text/css" href="/css/base.css">
    <link type="image/png" rel="SHORTCUT ICON" href="/images/trophy.png">
<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Bitter:700' rel='stylesheet' type='text/css'>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.0.6/modernizr.min.js"></script>
<script type="text/javascript" src="/js/chosen.jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="/css/chosen.css">
<script type="text/javascript"> jQuery(document).ready(function(){
  jQuery(".chosen").data("placeholder","Usernames").chosen();
}); </script>
<style type="text/css">
    body{
        padding-top: 60px;
    }
</style>
<script type="text/javascript">
$(window).load(function(){  
      $('#container').fadeIn(700); 
});
</script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">TRIUMPH</a>
          <div class="nav-collapse pull-right">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
          
        </div>
      </div>
      <div id="nav-colors"></div>   
    </div>
    <div class="container">
        <h1>Start a New Game</h1>
        <form id="login-form" method="post" action="/games/new" style="text-align:center;" class="clearfix">
            <br>
            <% if( error ) {%>
                <div class="alert alert-error" style="margin-left:auto; margin-right:auto; width: 400px;">
                    <a class="close" href="#">Ã—</a>
                    <p><%= error %></p>
                </div>
            <% } %>
            <label for"game[users]"><h4>Who are you playing with? (maximum of 3 other people)</h3></label>
            <!-- <input type="text" name="game[users]" placeholder="Usernames"/> -->
            <select class="chosen" multiple="true" style="width:400px;" name="game[users]">
                <% for(var i=0; i<users.length; i++) {%>
                   <option value="<%= users[i] %>"><%= users[i] %></option>
                <% } %>
            </select>
            <br />
            <label for"game[map]"><h4>Which map are you playing on?</h3></label>
            <select name="game[map]">
                <option name="game[map]" value="nyc" selected>New York City</option>
            </select><br /><br />
            <input type="submit" class="btn btn-large btn-danger" style="text-align:center;" value="Start!" />
        </form> 
    </div>
</body>
</html>