<html class="no-js">
<head>
    <title>New Game - TRIUMPH</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/base.css">
    <link type="image/png" rel="SHORTCUT ICON" href="images/trophy.png">
<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Bitter:700' rel='stylesheet' type='text/css'>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.0.6/modernizr.min.js"></script>
<script type="text/javascript">
$(window).load(function(){  
      $('#wrapper').fadeIn(700); 
});
</script>
</head>
<body>
<div id="wrapper">
    <h1>TRIUMPH</h1>
    <form id="login-form" method="post" action="/games/new">
        <% if( error ) {%>
            <div class="alert-message error" style="margin-left:auto; margin-right:auto; width: 600px;">
                <a class="close" href="#">Ã—</a>
                <p><strong>Uh oh!</strong> Looks like you entered some info incorrectly, how about you try again?</p>
            </div>
        <% } %>
        <label for"game[users]">Who are you playing with? (maximum of 3 other people, separated by comma)</label>
        <input type="text" name="game[users]" placeholder="Usernames"/><br />
        <select name="game[map]">
            <option name="game[map]" value="nyc" selected>New York City</option>
        </select><br /><br />
        <input type="submit" class="button blue" value="Start!" />
    </form>
    <div id="login-ext">
        <a href="/forgot">Forgot your password?</a><br />
        <a href="/signup">Are you new here?</a>
    </div>
</div>
</body>
</html>